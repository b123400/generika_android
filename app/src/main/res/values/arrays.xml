<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- [search type] -->
  <string-array name="settings_search_type_names">
    <item>@string/pv_fullname</item>
    <item>@string/pi_fullname</item>
    <item>@string/fi_fullname</item>
  </string-array>

  <string-array name="settings_search_type_values">
    <!-- NOTE: use same abbr (FI/PI) as value with ch.oddb.org (in german) -->
    <!-- NOTE: [p]reis [v]ergleich -->
    <item>pv</item>
    <item>pi</item>
    <item>fi</item>
  </string-array>

  <!-- [search lang] (no english) -->
  <string-array name="settings_search_lang_names">
    <item>@string/lang_de_name</item>
    <item>@string/lang_fr_name</item>
  </string-array>

  <string-array name="settings_search_lang_values">
    <!-- NOTE: same as @string/lang_{de|fr}_abbr in strings.xml -->
    <item>de</item>
    <item>fr</item>
  </string-array>

  <!-- [app locale] -->
  <string-array name="settings_app_locale_names">
    <item>@string/lang_de_abbr</item>
    <item>@string/lang_fr_abbr</item>
    <item>@string/lang_en_abbr</item>
  </string-array>

  <string-array name="settings_app_locale_values">
    <!-- NOTE: same as @string/lang_{de|fr|en}_abbr in strings.xml -->
    <item>de</item>
    <item>fr</item>
    <item>en</item>
  </string-array>

</resources>
