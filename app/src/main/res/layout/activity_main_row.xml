<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingRight="11dp"
    android:paddingLeft="11dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/scanned_product_item_name"
        android:layout_width="270.5dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2.5dp"
        android:singleLine="true"
        android:paddingTop="1.25dp"
        android:paddingRight="2.5dp"
        android:paddingLeft="2.5dp"
        android:paddingBottom="1.25dp"
        android:textColor="#222222"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/scanned_product_item_size"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanned_product_item_name"
        android:layout_marginRight="1.25dp"
        android:layout_marginBottom="2.5dp"
        android:singleLine="true"
        android:paddingTop="1.25dp"
        android:paddingRight="2.5dp"
        android:paddingLeft="2.5dp"
        android:paddingBottom="1.25dp"
        android:textColor="#444444"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/scanned_product_item_datetime"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanned_product_item_name"
        android:layout_toRightOf="@+id/scanned_product_item_size"
        android:layout_marginLeft="1.25dp"
        android:layout_marginBottom="2.5dp"
        android:singleLine="true"
        android:paddingTop="1.25dp"
        android:paddingRight="2.5dp"
        android:paddingLeft="2.5dp"
        android:paddingBottom="1.25dp"
        android:textColor="#ACACAC"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/scanned_product_item_price"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanned_product_item_size"
        android:layout_marginRight="1.25dp"
        android:layout_marginBottom="2.5dp"
        android:singleLine="true"
        android:paddingTop="1.25dp"
        android:paddingRight="2.5dp"
        android:paddingLeft="2.5dp"
        android:paddingBottom="1.25dp"
        android:textColor="#ACACAC"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/scanned_product_item_deduction"
        android:layout_width="68dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/scanned_product_item_size"
        android:layout_toRightOf="@+id/scanned_product_item_price"
        android:layout_marginRight="1.25dp"
        android:layout_marginBottom="2.5dp"
        android:layout_marginLeft="1.25dp"
        android:singleLine="true"
        android:paddingTop="1.25dp"
        android:paddingRight="2.5dp"
        android:paddingLeft="2.5dp"
        android:paddingBottom="1.25dp"
        android:textColor="#ACACAC"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/scanned_product_item_category"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanned_product_item_size"
        android:layout_toRightOf="@+id/scanned_product_item_deduction"
        android:layout_marginBottom="2.5dp"
        android:layout_marginLeft="1.25dp"
        android:singleLine="true"
        android:paddingTop="1.25dp"
        android:paddingRight="2.5dp"
        android:paddingLeft="2.5dp"
        android:paddingBottom="1.25dp"
        android:textColor="#ACACAC"
        android:textSize="10.5sp"/>

    <TextView
        android:id="@+id/scanned_product_item_ean"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanned_product_item_price"
        android:layout_marginRight="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:singleLine="true"
        android:paddingTop="1.25dp"
        android:paddingRight="2.5dp"
        android:paddingLeft="2.5dp"
        android:paddingBottom="1.25dp"
        android:textColor="#ACACAC"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/scanned_product_item_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:adjustViewBounds="false"
        android:focusable="false"
        android:padding="16dp"
        android:src="@android:drawable/ic_menu_delete" />
</RelativeLayout>
